
#include<iostream>
using namespace std;

class leapYear {
	public:

		/* Public function defined inside class */
		void isLeapYear(int yr) {
			if(yr % 4 == 0 || yr % 400 == 0)
				cout << "It's a Leap Year!" << endl;
			else
				cout << "It's not a Leap Year!" << endl;
		}
};

int main() {
	int year;
	leapYear x;
	cout << "Program to find Leap Year" << endl;
	cout << "Enter a year:" << endl;
	cin >> year;
	x.isLeapYear(year);
	return 0;
}


